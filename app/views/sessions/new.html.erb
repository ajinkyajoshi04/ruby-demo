<html>
<div>
<% if flash[:alert] %>
<p id = "notice" %><%= flash[:alert] %> </p>
<% end %>
<%= form_tag do %>
<br>

<strong><u>Log In</u> </strong>

<div>

<%= label_tag :name, 'Name' %>
<%= text_field_tag :name, params[:name] %>
<%= label_tag :password, 'Password' %>
<%= password_field_tag :password, params[:password] %>
</br>

</div>

<div>
<br>
<%= submit_tag "Login" %>
<%= link_to "Forget Password?", forgetpass_index_path %>
<p>Problem with Sign in?<%= link_to "Click here", admin1_index_path %></p>
</div>

<%end %>
</div>
</html>
